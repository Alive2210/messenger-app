<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Properties -->
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{traceId:-}] [%X{userId:-}] %logger{36} - %msg%n"/>
    <property name="LOG_PATH" value="${LOG_PATH:-logs}"/>
    <property name="MAX_HISTORY" value="${LOG_MAX_HISTORY:-30}"/>
    <property name="MAX_SIZE" value="${LOG_MAX_SIZE:-100MB}"/>
    <property name="TOTAL_SIZE_CAP" value="${LOG_TOTAL_SIZE_CAP:-10GB}"/>

    <!-- Console Appender - цветной вывод для разработки -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>${CONSOLE_LOG_LEVEL:-INFO}</level>
        </filter>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) [%yellow(%thread)] %cyan(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Structured Console (JSON) для production -->
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeContext>true</includeContext>
            <includeMdc>true</includeMdc>
            <customFields>{"service":"messenger","version":"1.0.0"}</customFields>
        </encoder>
    </appender>

    <!-- Application Log File -->
    <appender name="FILE_APPLICATION" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/application.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>${MAX_SIZE}</maxFileSize>
            <maxHistory>${MAX_HISTORY}</maxHistory>
            <totalSizeCap>${TOTAL_SIZE_CAP}</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Application Log JSON -->
    <appender name="FILE_APPLICATION_JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/application.json</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/application.%d{yyyy-MM-dd}.%i.json.gz</fileNamePattern>
            <maxFileSize>${MAX_SIZE}</maxFileSize>
            <maxHistory>${MAX_HISTORY}</maxHistory>
            <totalSizeCap>${TOTAL_SIZE_CAP}</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeContext>true</includeContext>
            <includeMdc>true</includeMdc>
            <customFields>{"service":"messenger","log_type":"application"}</customFields>
        </encoder>
    </appender>

    <!-- Error Log File -->
    <appender name="FILE_ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/error.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/error.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>${MAX_SIZE}</maxFileSize>
            <maxHistory>${MAX_HISTORY}</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Audit Log File -->
    <appender name="FILE_AUDIT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/audit.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/audit.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>${MAX_SIZE}</maxFileSize>
            <maxHistory>90</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeContext>true</includeContext>
            <includeMdc>true</includeMdc>
            <customFields>{"service":"messenger","log_type":"audit"}</customFields>
        </encoder>
    </appender>

    <!-- Security Log File -->
    <appender name="FILE_SECURITY" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/security.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/security.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>${MAX_SIZE}</maxFileSize>
            <maxHistory>90</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeContext>true</includeContext>
            <includeMdc>true</includeMdc>
            <customFields>{"service":"messenger","log_type":"security"}</customFields>
        </encoder>
    </appender>

    <!-- WebSocket Log File -->
    <appender name="FILE_WEBSOCKET" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/websocket.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/websocket.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>${MAX_SIZE}</maxFileSize>
            <maxHistory>${MAX_HISTORY}</maxHistory>
            <totalSizeCap>${TOTAL_SIZE_CAP}</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Performance Log File -->
    <appender name="FILE_PERFORMANCE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/performance.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/performance.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>${MAX_SIZE}</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeContext>true</includeContext>
            <includeMdc>true</includeMdc>
            <customFields>{"service":"messenger","log_type":"performance"}</customFields>
        </encoder>
    </appender>

    <!-- Loggers -->
    
    <!-- Root Logger -->
    <root level="${ROOT_LOG_LEVEL:-INFO}">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE_APPLICATION"/>
        <appender-ref ref="FILE_APPLICATION_JSON"/>
        <appender-ref ref="FILE_ERROR"/>
    </root>

    <!-- Application Logger -->
    <logger name="com.messenger" level="${APP_LOG_LEVEL:-DEBUG}" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE_APPLICATION"/>
        <appender-ref ref="FILE_APPLICATION_JSON"/>
        <appender-ref ref="FILE_ERROR"/>
    </logger>

    <!-- Audit Logger -->
    <logger name="AUDIT" level="INFO" additivity="false">
        <appender-ref ref="FILE_AUDIT"/>
    </logger>

    <!-- Security Logger -->
    <logger name="SECURITY" level="INFO" additivity="false">
        <appender-ref ref="FILE_SECURITY"/>
    </logger>

    <!-- WebSocket Logger -->
    <logger name="WEBSOCKET" level="${WS_LOG_LEVEL:-DEBUG}" additivity="false">
        <appender-ref ref="FILE_WEBSOCKET"/>
    </logger>

    <!-- Performance Logger -->
    <logger name="PERFORMANCE" level="INFO" additivity="false">
        <appender-ref ref="FILE_PERFORMANCE"/>
    </logger>

    <!-- SQL Logger -->
    <logger name="org.hibernate.SQL" level="${SQL_LOG_LEVEL:-WARN}"/>
    <logger name="org.hibernate.type.descriptor.sql" level="${SQL_LOG_LEVEL:-WARN}"/>

    <!-- Spring Logger -->
    <logger name="org.springframework" level="${SPRING_LOG_LEVEL:-WARN}"/>
    <logger name="org.springframework.security" level="${SECURITY_LOG_LEVEL:-INFO}"/>
    <logger name="org.springframework.web" level="${WEB_LOG_LEVEL:-WARN}"/>

    <!-- Third-party Loggers -->
    <logger name="io.minio" level="WARN"/>
    <logger name="org.apache.http" level="WARN"/>
    <logger name="com.rabbitmq" level="WARN"/>

    <!-- Active Profile Based Configuration -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="CONSOLE_JSON"/>
            <appender-ref ref="FILE_APPLICATION_JSON"/>
            <appender-ref ref="FILE_ERROR"/>
        </root>
        <logger name="com.messenger" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE_JSON"/>
            <appender-ref ref="FILE_APPLICATION_JSON"/>
            <appender-ref ref="FILE_ERROR"/>
        </logger>
    </springProfile>

    <springProfile name="dev">
        <root level="DEBUG">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE_APPLICATION"/>
        </root>
    </springProfile>

</configuration>
